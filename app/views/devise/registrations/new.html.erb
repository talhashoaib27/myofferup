<section class="fdb-block" style="background-image: url(<%= image_path 'bg_0.svg' %>)" data-block-type="forms" data-id="2" draggable="true">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-7 col-xl-5 text-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="fdb-box fdb-touch">
            <div class="row">
              <div class="col">
                <h1>Register</h1>
                <p class="text-h3">Fill out this quick form for registration. </p>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
              </div>
            </div>

            <div class="row mt-4">
              <div class="col">
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              </div>
            </div>

            <div class="row mt-4">
              <div class="col">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
              </div>
            </div>

            <div class="row mt-4">
              <div class="col">
                <%= f.submit "Sign up", class: "btn mt-4" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

